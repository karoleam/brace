<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textViewFood1"
        style="@style/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Large Text" />

    <ImageButton
        android:id="@+id/imageButtonFood2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewFood1"
        android:layout_alignTop="@+id/imageButtonFood1"
        android:layout_marginLeft="61dp"
        android:src="@drawable/food2cupcake" />

    <ImageButton
        android:id="@+id/imageButtonFood3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonFood1"
        android:layout_below="@+id/imageButtonFood1"
        android:layout_marginTop="40dp"
        android:src="@drawable/food3apple" />

    <ImageButton
        android:id="@+id/imageButtonFood4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonFood2"
        android:layout_alignTop="@+id/imageButtonFood3"
        android:src="@drawable/food4banana" />

    <ImageButton
        android:id="@+id/imageButtonFood1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFood1"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/imageButtonFood2"
        android:src="@drawable/food1burger" />

</RelativeLayout>